<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ph.DriverPH.module.auth.mapper.AuthUserMapper">

    <insert id="register" parameterType="com.ph.DriverPH.module.auth.request.AuthUserRequest">
        insert
        into
        user (username, password, email, date, roles)
        values (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{email,jdbcType=VARCHAR}, #{date,jdbcType=TIMESTAMP},  #{roles,jdbcType=VARCHAR})
    </insert>

    <select id="getUser" resultType="com.ph.DriverPH.module.auth.entity.AuthUser">
        select *
        from
        user
        where username = #{username,jdbcType=VARCHAR}
    </select>
</mapper>